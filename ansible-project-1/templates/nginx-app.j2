server {
    listen 80;
    server_name {{ server_name }};  # Domain or IP address

    root {{ app_root }};
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    # Optional: Proxy pass for backend applications (Node.js, etc.)
    # location /api/ {
    #    proxy_pass http://127.0.0.1:3000;
    # }

    # Optional: Custom error pages
    error_page 404 /custom_404.html;
    location = /custom_404.html {
        internal;
    }
}
